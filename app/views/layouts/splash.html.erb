<!DOCTYPE html>
<html>
<head>
	<title><%= TITLE %></title>
	<script type="text/javascript">var current_user = <%= current_user.to_json(except: :password_digest).html_safe %>;</script>
	<link rel="shortcut icon" href="<%= asset_path 'logo.png' %>" />
	<%= stylesheet_link_tag    'splash', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'splash', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body ng:controller="Ctrl">

	<nav class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">

			<div class="navbar-header">
				<div class="container-fluid">
					<%= link_to root_path,class: 'navbar-brand' do %>
					<span><%= image_tag 'logo.png',height: 20 %></span>
					&nbsp;&nbsp;WEST COAST AVENGERS
					<% end %>
				</div>
			</div>

			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav">
					<li></li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li><%= link_to login_path do %><%= icon 'log-in' %>&nbsp;&nbsp;Log In<% end %></li>
				</ul>
			</div>
			
		</div>
	</nav>
	
	<%= yield %>

</body>
</html>