<div class="spacer"></div>

<div class="container">

	<% flash.each do |type,message| %>
	<alert type="<%= type %>"><%= message %></alert>
	<% end %>

	<div class="row">

		<div class="col-md-3"></div>
		<div class="col-md-6">

			<div class="spacer"></div>
			<div class="panel panel-default">

				<div class="panel-heading">
					<b>Log In</b>
				</div>
				<div class="panel-body">
					
					<%= form_tag login_try_path do %>
					<div class="form-group">
						<%= text_field_tag :email, params[:email],class: 'form-control input-lg',placeholder: 'Email' %>
					</div>
					<div class="form-group">
						<%= password_field_tag :password,nil,class: 'form-control input-lg',placeholder: 'Password' %>
					</div>
					<div class="actions"><%= submit_tag "Log In",class: 'btn btn-primary btn-lg FULL' %></div>
					<% end %>

				</div>

			</div>

		</div>
		<div class="col-md-3"></div>

	</div>

</div>